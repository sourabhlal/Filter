<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.sourabhlal.filter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.sourabhlal.filter.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.sourabhlal.filter.AddContactActivity"
            android:label="@string/title_activity_add_contact"
            android:parentActivityName="app.sourabhlal.filter.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.sourabhlal.filter.MainActivity" />
        </activity>
        <activity
            android:name="app.sourabhlal.filter.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName="app.sourabhlal.filter.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.sourabhlal.filter.MainActivity" />
        </activity>
        <activity
            android:name="app.sourabhlal.filter.EditContactActivity"
            android:label="@string/title_activity_edit_contact"
            android:parentActivityName="app.sourabhlal.filter.ContactActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.sourabhlal.filter.MainActivity" />
        </activity>
    </application>

</manifest>